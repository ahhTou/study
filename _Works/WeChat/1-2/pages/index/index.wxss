/**index.wxss**/

view {
  box-sizing: border-box;
  overflow: hidden;
}

.banner-box {
  width: 85vw;
  height: 250px;
  overflow: hidden;
  position: relative;
  box-sizing: border-box;
  border-radius: 30px;
  box-shadow: 10px 10px 20px rgba(30, 30, 30, 1);
  margin-bottom: 15px;
  transition: all 0.3s;
  background-position: center;
  background-size: 100%;
}


.image-bigger {
  background-size: 200%;
}

#banner-list-wrapper {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.banner-title {
  position: absolute;
  z-index: 2;
  left: 15px;
  bottom: 10px;
  text-shadow: 10px 10px 20px rgba(30, 30, 30, 1);
  font-size: 30px;
  font-weight: bolder;
  color: rgb(30, 30, 30);
}
