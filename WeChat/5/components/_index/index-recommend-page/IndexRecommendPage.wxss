/* components/_index/index-recommend-page/IndexRecommendPage.wxss */
:host {
  position: relative;
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  overflow: scroll;
}

/* 头图 */

.cover-wrapper {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin-top: 20rpx;
}

.swiper-cover-img {
  width: 100%;
  height: 100%;
}

.cover-img {
  width: 50%;
  height: 50%;
}

.swiper-wrapper {
  width: 100%;
  height: 350rpx;
  display: flex;
  justify-content: center;
}

.swiper {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.swiper-img {
  width: 100%;
  height: 100%;
  background-position: center;
  background-size: 100%;
}

/* title */

.date-wrapper {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  color: rgb(233, 233, 233);
  display: flex;
  align-items: center;
  flex-direction: column;
  margin: 20rpx 0 20rpx 0;
}

.date-title {
  position: relative;
  font-size: 60rpx;
  font-family: '微软雅黑';
  width: 100%;
  text-align: center;
}

.date-time {
  position: relative;
  width: 100%;
  font-size: 25rpx;
  color: rgb(80, 80, 80);
  text-align: center;
  margin-bottom: 15rpx;
}

.date-img-wrapper {
  position: relative;
  width: 100%;
  min-height: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;

  background: rgb(80, 80, 80);
  
  overflow: hidden;
}

.date-img {
  position: relative;
  width: calc(100% /3);
  height: 250rpx;
}

/* 跳转 */

.navigator-list {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  display: flex;
  padding: 0 80rpx 0 80rpx;
  justify-content: space-around;
}

.navigator-wrapper {
  width: 80rpx;
  display: flex;
  flex-direction: column;
}

.navigator {
  width: 100%;
  height: 80rpx;
  background: white;
  border-radius: 20rpx;
  background-size: cover;
  background-position: center;
  background-image: url('https://s3.ax1x.com/2020/11/20/DQrl9J.jpg');
}

.navigator-title {
  margin-top: 10rpx;
  font-size: 20rpx;
  text-align: center;
  color: rgb(80, 80, 80);
}

/* 引入的block组件的wrapper */

.banner-wrapper {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
