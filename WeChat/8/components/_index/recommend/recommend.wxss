/* components/_index/index-recommend-page/IndexRecommendPage.wxss */

.recommend-scroll-view {
  position: relative;
  box-sizing: border-box;
  width: 100vw;
  height: calc(100vh - 110rpx);
  overflow: scroll;
}

/* 头图 */

.cover-wrapper {
  display: flex;
  width: 100%;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.swiper-cover-img {
  width: 100%;
  height: 100%;
}

.cover-img {
  width: 50%;
  height: 50%;
}

.swiper-wrapper {
  width: 100%;
  height: 350rpx;
  display: flex;
  justify-content: center;
  border-radius: 30rpx;
  overflow: hidden;
  padding: 10rpx;
  background: rgb(35, 35, 35);
}

.swiper {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  overflow: hidden;
}

.swiper-img {
  width: 100%;
  height: 100%;
  background-position: center;
  background-size: 100%;
}

/* title */

.date-wrapper {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  color: rgb(233, 233, 233);
  display: flex;
  align-items: center;
  flex-direction: column;
  background: rgb(35, 35, 35);
  border-radius: 30rpx;
  margin: 20rpx 0 20rpx 0;
  padding: 50rpx;
}

.date-title {
  position: relative;
  font-size: 60rpx;
  font-family: '微软雅黑';
  width: 100%;
  text-align: center;
}

.date-time {
  position: relative;
  width: 100%;
  font-size: 25rpx;
  color: rgb(80, 80, 80);
  text-align: center;
  margin-bottom: 15rpx;
}

.date-img-wrapper {
  border-radius: 30rpx;
  position: relative;
  width: 100%;
  min-height: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  background: rgb(80, 80, 80);
  overflow: hidden;
}

.date-img {
  position: relative;
  width: calc(100% /3);
  height: 300rpx;
}

/* 跳转 */

.navigator-list-wrapper {
  background: rgb(35, 35, 35);
  border-radius: 30rpx;
  box-sizing: border-box;
  position: relative;
  width: 100%;
  display: flex;
  margin: 20rpx 0 20rpx 0;
  padding: 20rpx 80rpx 20rpx 80rpx;
  justify-content: space-around;
}

.navigator-wrapper {
  width: 80rpx;
  display: flex;
  flex-direction: column;
}

.navigator {
  width: 100%;
  height: 80rpx;
  background: white;
  border-radius: 20rpx;
  background-size: cover;
  background-position: center;
  background-image: url('https://s3.ax1x.com/2020/11/20/DQrl9J.jpg');
}

.navigator-title {
  margin-top: 10rpx;
  font-size: 20rpx;
  text-align: center;
  color: rgb(80, 80, 80);
}

/* 引入的block组件的wrapper */

.banner-wrapper {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

/* hot */

.hot-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  background: rgb(35, 35, 35);
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.hot-img-wrapper {
  border-radius: 30rpx;
  min-height: 300rpx;
  width: 90%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  /* justify-content: center; */
  overflow: hidden;
  justify-content: space-between;
}

.hot-title {
  font-size: 50rpx;
  margin: 30rpx;
  color: rgb(233, 233, 233);
}

.hot-img {
  box-sizing: border-box;
  border: 1px solid rgb(32, 32, 32);
  width: 29vw;
  height: 300rpx;
}
