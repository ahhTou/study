/* components/_index/album/album.wxss */

.album-wrapper {
  position: relative;
  box-sizing: border-box;
  width: 100vw;
  height: calc(100vh - 110rpx);
  display: flex;
  justify-content: center;
  flex-direction: row;
  flex-wrap: wrap;
}

.album-item {
  position: relative;
  width: 350rpx;
  background: rgb(35, 35, 35);
  border-radius: 30rpx;
  margin: 10rpx;
  overflow: hidden;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.album-item-big-box {
  position: relative;
  width: 100%;
  border-radius: 30rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.album-item-big-img {
  position: relative;
  display: flex;
  width: 100%;
  height: 250rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

.album-item-little-box {
  position: relative;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
  justify-content: space-around;
}

.album-item-little-text {
  width: 210rpx;
  border-radius: 30rpx;
  text-align: center;
  height: 105rpx;
  margin-bottom: 10rpx;
  background: rgb(30, 30, 30);
  color: white;
  font-size: 25rpx;
  line-height: 105rpx;
  overflow: hidden;
}

.album-item-little-img {
  border-radius: 30rpx;
  position: relative;
  display: flex;
  width: 150rpx;
  height: 100rpx;
  overflow: hidden;
}

.album-item-little-img:nth-child(2) {
  width: 100rpx;
  height: 100rpx;
  border-radius: 30rpx;
}
