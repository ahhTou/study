/**index.wxss**/

.index-wrapper {
  --x: 0vw;
  width: 100vw;
  height: 100vh;
}

.index-content-wrapper {
  --move: 0vw;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 200vw;
  transition: all .3s;
  transform: translateX(calc(-1 * var(--move)));
}

recommend {
  position: relative;
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  overflow: scroll;
}

latey {
  overflow: scroll;
  position: relative;
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
}
